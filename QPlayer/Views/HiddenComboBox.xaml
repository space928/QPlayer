<UserControl x:Class="QPlayer.Views.HiddenComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QPlayer.Views"
             x:Name="HiddenComboBoxInst"
             mc:Ignorable="d" 
             Focusable="True" IsTabStop="True" GotKeyboardFocus="HiddenComboBoxInst_GotKeyboardFocus"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid IsEnabledChanged="Grid_IsEnabledChanged">
        <Label Name="Label" MouseDown="Label_MouseDown" MouseDoubleClick="Label_MouseDoubleClick" Content="{Binding InactiveContent, ElementName=HiddenComboBoxInst}" ContentTemplate="{Binding InactiveContentTemplate, ElementName=HiddenComboBoxInst}" VerticalContentAlignment="Center"/>
        <ComboBox x:Name="ComboBoxInst" SelectedIndex="{Binding SelectedIndex, ElementName=HiddenComboBoxInst}" ItemsSource="{Binding ItemsSource, ElementName=HiddenComboBoxInst}" DropDownClosed="ComboBoxInst_DropDownClosed" Visibility="Collapsed" VerticalAlignment="Center" Margin="2"/>
    </Grid>
</UserControl>
