<Window x:Class="QPlayer.Views.RemoteNodesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QPlayer.Views" 
        xmlns:vm="clr-namespace:QPlayer.ViewModels" 
        d:DataContext="{d:DesignInstance Type=vm:RemoteNodesWindowViewModel}"
        mc:Ignorable="d"
        Title="QPlayer - Remote Nodes" Height="400" Width="700" 
        Style="{DynamicResource CustomWindowStyle}" 
        ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen" 
        Icon="{StaticResource IconImage}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="0,0,3,0">
            <Label Content="Remote Nodes Referenced By Cues" Background="{DynamicResource AREghZyBrush.Primary.3.Background.Static}" 
                   FontWeight="Bold" Margin="8,8,0,0" Grid.Row="0"/>
            <Button Content="Refresh List" Margin="4,4,3,2" Command="{Binding RefreshCueListCommand}"/>

            <ScrollViewer Background="{DynamicResource AREghZyBrush.Primary.2.Background.Static}" 
                          BorderBrush="{DynamicResource Button.Static.Border}" BorderThickness="1"
                          Margin="2">
                <ItemsControl ItemsSource="{Binding CueRemoteNodes}" MinHeight="150">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="vm:RemoteNodeGroupViewModel">
                            <DockPanel>
                                <DockPanel.Style>
                                    <Style TargetType="{x:Type DockPanel}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsActiveNode}" Value="False">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <SolidColorBrush Color="#FF670303"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsLocalNode}" Value="True">
                                                <Setter Property="Opacity" Value="0.5">
                                                </Setter>
                                            </DataTrigger>
                                            <Trigger Property="IsMouseOver" Value="true">
                                                <Setter Property="Background" Value="{DynamicResource AREghZyBrush.Primary.3.Background.Static}" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DockPanel.Style>
                                <StackPanel ToolTip="The name of this node for remote control, must be unique within the network." Orientation="Horizontal">
                                    <!--<Label Content="Remote Node" HorizontalAlignment="Left"/>-->
                                    <local:TextField Text="{Binding RemoteNode}" Margin="8,2,2,2" MinWidth="100"/>
                                </StackPanel>
                                <Expander HorizontalAlignment="Left" ExpandDirection="Down" IsExpanded="False" Margin="2">
                                    <Expander.Header>
                                        <TextBlock>
                                            <Run Text="{Binding Cues.Count, Mode=OneWay}"/>
                                            <Run Text=" Cues"/>
                                        </TextBlock>
                                    </Expander.Header>
                                    <ItemsControl ItemsSource="{Binding Cues}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="vm:CueViewModel">
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="{Binding QID, Mode=OneWay}"/>
                                                    <Label Content="{Binding Name, Mode=OneWay}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander>
                            </DockPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.Style>
                        <Style TargetType="ItemsControl">
                            <Style.Triggers>
                                <Trigger Property="HasItems" Value="false">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <TextBlock Text="No cues reference any remote nodes." VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ItemsControl.Style>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>

        <GridSplitter Grid.Column="1" HorizontalAlignment="Left" Margin="0,0,0,0" Width="5" ResizeBehavior="PreviousAndCurrent"/>
        <local:RemoteSetupControl Grid.Column="1" DataContext="{Binding ProjectSettings}"  Margin="8,0,0,0"/>
    </Grid>
</Window>
