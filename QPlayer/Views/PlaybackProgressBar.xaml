<UserControl x:Class="QPlayer.Views.PlaybackProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QPlayer.Views"
             xmlns:vm="clr-namespace:QPlayer.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance Type=vm:SoundCueViewModel}">
    <Grid x:Name="ProgressBarGrid" DataContext="{Binding RelativeSource={RelativeSource AncestorType=local:PlaybackProgressBar}}">
        <ProgressBar HorizontalAlignment="Stretch" Value="{Binding Progress, Mode=OneWay}"/>
        <Label Name="PlaybackTimeLabel" Content="{Binding PlaybackTimeStringShort}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
    </Grid>
</UserControl>
