<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="SoftDark.xaml"/>
        <ResourceDictionary Source="ControlColours.xaml"/>
        <ResourceDictionary Source="Controls.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <Style x:Key="SlightlyRoundButton" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="{StaticResource AREghZy.CornerRadiusMedium}" />
            </Style>
        </Style.Resources>
    </Style>
    
    <Style x:Key="SlightlyRoundButtonTop" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="{StaticResource AREghZy.CornerRadiusMediumTop}" />
            </Style>
        </Style.Resources>
    </Style>

    <Style x:Key="SlightlyRoundButtonBottom" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="{StaticResource AREghZy.CornerRadiusMediumBottom}" />
            </Style>
        </Style.Resources>
    </Style>

    <Style x:Key="ButtonRoundLeft" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="{StaticResource AREghZy.CornerRadiusLeft}" />
            </Style>
        </Style.Resources>
    </Style>

    <Style x:Key="ButtonRoundRight" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="{StaticResource AREghZy.CornerRadiusRight}" />
            </Style>
        </Style.Resources>
    </Style>

    <Style x:Key="ButtonRoundTop" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="{StaticResource AREghZy.CornerRadiusTop}" />
            </Style>
        </Style.Resources>
    </Style>

    <Style x:Key="ButtonRoundBottom" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="{StaticResource AREghZy.CornerRadiusBottom}" />
            </Style>
        </Style.Resources>
    </Style>

    <Style x:Key="RoundButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="1000" />
            </Style>
        </Style.Resources>
    </Style>

    <Style TargetType="{x:Type DataGrid}" BasedOn="{StaticResource {x:Type DataGrid}}">
        <Setter Property="Background" Value="{DynamicResource ListBox.Static.Background}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ListBox.Static.Border}" />
        <Setter Property="Foreground" Value="{DynamicResource ListBox.Static.Foreground}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="ColumnHeaderStyle">
            <Setter.Value>
                <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                    <Setter Property="Background" Value="{DynamicResource AREghZyBrush.Deep.2.Background.Static}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource AREghZyBrush.Deep.2.Border.Static}"/>
                    <Setter Property="Foreground" Value="{DynamicResource AREghZyBrush.Foreground.Static}"/>
                    <Setter Property="BorderThickness" Value="0,0,2,0"/>
                    <Setter Property="Padding" Value="6,4,12,4"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource Button.MouseOver.Background}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="RowStyle">
            <Setter.Value>
                <Style TargetType="{x:Type DataGridRow}" BasedOn="{StaticResource {x:Type DataGridRow}}">
                    <Setter Property="Background" Value="{DynamicResource AREghZyBrush.Deep.2.Background.Static}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource AREghZyBrush.Deep.2.Border.Static}"/>
                    <Setter Property="Foreground" Value="{DynamicResource AREghZyBrush.Foreground.Static}"/>
                    <Setter Property="BorderThickness" Value="0,0,2,0"/>
                    <Setter Property="Padding" Value="6,4,12,4"/>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="DatePicker">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="BorderBrush" Value="Black"/>
                <Setter Property="CornerRadius" Value="{StaticResource AREghZy.CornerRadius}" />
            </Style>
        </Style.Resources>
        <Setter Property="Background" Value="{DynamicResource TextBox.Static.Background}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource TextBox.Static.Border}"/>
        <Setter Property="Foreground" Value="{DynamicResource AREghZyBrush.Foreground.Static}"/>
        <Setter Property="CalendarStyle">
            <Setter.Value>
                <Style TargetType="Calendar">
                    <Style.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="{StaticResource AREghZy.CornerRadius}" />
                        </Style>
                    </Style.Resources>
                    <Setter Property="Background" Value="{DynamicResource TextBox.Static.Background}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource TextBox.Static.Border}"/>
                    <Setter Property="Foreground" Value="{DynamicResource AREghZyBrush.Foreground.Static}"/>
                    <Setter Property="CalendarItemStyle">
                        <Setter.Value>
                            <Style TargetType="CalendarItem" BasedOn="{StaticResource {x:Type CalendarItem}}">
                                <Setter Property="Foreground" Value="{DynamicResource AREghZyBrush.Foreground.Static}"/>
                            </Style>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="DatePickerTextBox">
        <Setter Property="Background" Value="{DynamicResource TextBox.Static.Background}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource TextBox.Static.Border}"/>
        <Setter Property="Foreground" Value="{DynamicResource AREghZyBrush.Foreground.Static}"/>
    </Style>
</ResourceDictionary>